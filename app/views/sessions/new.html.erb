<div class="login-form">
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :email%>
      <%= text_field_tag :email, "", class: "email-control" %>
    </div>
    <div class="form-pass">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "password-control" %>
    </div>
    <br>
    <%= submit_tag "Login", class: 'btn btn-default btn-lg btn-submit' %>
    <br>
    <br>
    <%= hidden_field_tag('redirect_to', params[:redirect_to]) %>
    <%= link_to "SignUp", new_user_path, params: { redirect_to: params[:redirect_to] } %>
    <br>
    <br>
    <%= link_to "back", root_path %>
  <% end %>
</div>
